-- ======================
-- ‚öîÔ∏è Mode System (Toggle)
-- ======================
local runningNormal = false
local runningAurora = false

-- ‡∏õ‡∏∏‡πà‡∏° Scylla ‡∏õ‡∏Å‡∏ï‡∏¥
local scyllaBtn = Instance.new("TextButton")
scyllaBtn.Parent = mainPanel
scyllaBtn.Size = UDim2.new(0,200,0,40)
scyllaBtn.Position = UDim2.new(0,20,0,50)
scyllaBtn.Text = "‚öîÔ∏è Scylla Mode"
scyllaBtn.BackgroundColor3 = Color3.fromRGB(30,30,30) -- ‡∏õ‡∏¥‡∏î = ‡∏î‡∏≥
scyllaBtn.TextColor3 = Color3.fromRGB(255,255,255)
scyllaBtn.Font = Enum.Font.SourceSans
scyllaBtn.TextSize = 14

-- ‡∏õ‡∏∏‡πà‡∏° Aurora Mode
local auroraBtn = Instance.new("TextButton")
auroraBtn.Parent = mainPanel
auroraBtn.Size = UDim2.new(0,200,0,40)
auroraBtn.Position = UDim2.new(0,20,0,100)
auroraBtn.Text = "üåå Scylla (Aurora Mode)"
auroraBtn.BackgroundColor3 = Color3.fromRGB(30,30,30) -- ‡∏õ‡∏¥‡∏î = ‡∏î‡∏≥
auroraBtn.TextColor3 = Color3.fromRGB(255,255,255)
auroraBtn.Font = Enum.Font.SourceSans
auroraBtn.TextSize = 14

-- Loop ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Normal Mode
local function normalLoop()
    task.spawn(function()
        while runningNormal do
            local scylla = workspace:FindFirstChild("Scylla")
            if scylla then
                print("‡∏û‡∏ö Scylla ‚Üí ‡πÉ‡∏ä‡πâ Rod")
                _G.UseRod("Default")
            else
                _G.UseTotem("Sundial")
            end
            task.wait(2)
        end
    end)
end

-- Loop ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Aurora Mode
local function auroraLoop()
    task.spawn(function()
        while runningAurora do
            local scylla = workspace:FindFirstChild("Scylla")
            if scylla then
                if cycle and cycle.Value == "Day" then
                    print("‚òÄÔ∏è Day ‚Üí ‡∏£‡∏≠ Night (‡πÉ‡∏ä‡πâ Sundial)")
                    _G.UseTotem("Sundial")
                elseif cycle and cycle.Value == "Night" then
                    print("üåô Night ‚Üí ‡πÉ‡∏ä‡πâ Aurora Totem ‡πÅ‡∏•‡πâ‡∏ß Rod")
                    task.wait(7)
                    _G.UseTotem("Aurora")
                    task.wait(7)
                    _G.UseRod("Default")
                end
            else
                _G.UseTotem("Sundial")
            end
            task.wait(2)
        end
    end)
end

-- ‡∏õ‡∏∏‡πà‡∏° Toggle Normal
scyllaBtn.MouseButton1Click:Connect(function()
    runningNormal = not runningNormal
    if runningNormal then
        runningAurora = false
        auroraBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
        scyllaBtn.BackgroundColor3 = Color3.fromRGB(50,150,50) -- ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß
        print("‚ñ∂Ô∏è ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÇ‡∏´‡∏°‡∏î Scylla ‡∏õ‡∏Å‡∏ï‡∏¥")
        normalLoop()
    else
        scyllaBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
        print("üõë ‡∏´‡∏¢‡∏∏‡∏î‡πÇ‡∏´‡∏°‡∏î Scylla ‡∏õ‡∏Å‡∏ï‡∏¥")
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏° Toggle Aurora
auroraBtn.MouseButton1Click:Connect(function()
    runningAurora = not runningAurora
    if runningAurora then
        runningNormal = false
        scyllaBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
        auroraBtn.BackgroundColor3 = Color3.fromRGB(100,50,150) -- ‡∏°‡πà‡∏ß‡∏á‡∏≠‡∏°‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß
        print("‚ñ∂Ô∏è ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÇ‡∏´‡∏°‡∏î Aurora")
        auroraLoop()
    else
        auroraBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
        print("üõë ‡∏´‡∏¢‡∏∏‡∏î‡πÇ‡∏´‡∏°‡∏î Aurora")
    end
end)

-- ======================
-- üéõÔ∏è ‡∏õ‡∏∏‡πà‡∏° Function
-- ======================
closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleBtn.Visible = true
end)

minimizeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleBtn.Visible = true
end)

toggleBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    toggleBtn.Visible = false
end)

print("‚úÖ Jeab Hub Loaded | Version : Beta")
