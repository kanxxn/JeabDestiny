    btn.Size = UDim2.new(1,0,0,30)
    btn.Text = name
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.BackgroundColor3 = Color3.fromRGB(90,90,50)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 14
    btn.Parent = sideBar
    return btn
end

local scyllaTab = createTab("ScyllaBuBu")

