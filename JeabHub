--// Jeab Hub üê• | Version : Beta
local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")
local lp = Players.LocalPlayer

-- ======================
-- üîß Logic Functions
-- ======================
local function useItem(itemName)
    local char = lp.Character or lp.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and string.find(tool.Name, itemName) then
        tool:Activate()
        return true
    end

    local backpack = lp.Backpack
    for _, toolInBackpack in pairs(backpack:GetChildren()) do
        if string.find(toolInBackpack.Name, itemName) then
            humanoid:EquipTool(toolInBackpack)
            task.wait()
            toolInBackpack:Activate()
            return true
        end
    end
    return false
end

local function equipItem(itemKeyword)
    local char = lp.Character or lp.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and string.find(tool.Name, itemKeyword) then
        return true
    end

    local backpack = lp.Backpack
    for _, toolInBackpack in pairs(backpack:GetChildren()) do
        if string.find(toolInBackpack.Name, itemKeyword) then
            humanoid:EquipTool(toolInBackpack)
            return true
        end
    end
    return false
end

-- ================================
-- ‚úÖ ‡∏ú‡∏π‡∏Å‡πÄ‡∏Ç‡πâ‡∏≤ _G ‡πÉ‡∏´‡πâ Hub ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡πÉ‡∏ä‡πâ‡πÑ‡∏î‡πâ
-- ================================
_G.UseTotem = function(totemType)
    if totemType == "Sundial" then
        useItem("Sundial Totem")
    elseif totemType == "Aurora" then
        useItem("Aurora Totem")
    end
end

_G.UseRod = function(mode)
    if mode == "Default" then
        equipItem("Rod Of The Zenith")
    end
end

-- ======================
-- ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡πà‡∏≤‡∏´‡∏•‡∏±‡∏Å‡∏à‡∏≤‡∏Å ReplicatedStorage
-- ======================
local cycle = RS:FindFirstChild("cycle_weatherstimeofday")

-- ======================
-- üñºÔ∏è GUI ‡∏´‡∏•‡∏±‡∏Å
-- ======================
