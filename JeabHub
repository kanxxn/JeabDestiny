local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- ======================================================
-- üü° CONFIG
-- ======================================================
local sundialName = "Sundial Totem"
local auroraName = "Aurora Totem"
local rodKeyword = "Rod Of The Zenith"

local isRunning = {
    scylla = false,
    megalodon = false,
    sunidol = false,
    squidboss = false
}
local scyllaActive = false
local scyllaAuroraMode = false
local debugVisible = {
    scylla = false,
    megalodon = false,
    sunidol = false,
    squidboss = false
}

-- Debug Logs ‡πÅ‡∏¢‡∏Å‡πÅ‡∏ï‡πà‡∏•‡∏∞‡πÇ‡∏´‡∏°‡∏î
local debugLines = {
    scylla = {},
    megalodon = {},
    sunidol = {},
    squidboss = {}
}
local maxLogs = 50

-- ======================================================
-- üü° FUNCTIONS
-- ======================================================

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÉ‡∏ä‡πâ‡πÑ‡∏≠‡πÄ‡∏ó‡πá‡∏°
local function useItem(itemName)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and string.find(tool.Name, itemName) then
        tool:Activate()
        return true
    end

    local backpack = LocalPlayer.Backpack
    for _, toolInBackpack in pairs(backpack:GetChildren()) do
        if string.find(toolInBackpack.Name, itemName) then
            humanoid:EquipTool(toolInBackpack)
            task.wait()
            toolInBackpack:Activate()
            return true
        end
    end
    return false
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏•‡∏±‡∏ö‡∏ñ‡∏∑‡∏≠
local function equipItem(itemKeyword)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and string.find(tool.Name, itemKeyword) then
        return true
    end

    local backpack = LocalPlayer.Backpack
    for _, toolInBackpack in pairs(backpack:GetChildren()) do
        if string.find(toolInBackpack.Name, itemKeyword) then
            humanoid:EquipTool(toolInBackpack)
            return true
        end
    end
    return false
end

-- Debug Log
local function debugLog(mode, msg, color)
    if not debugVisible[mode] then return end
    table.insert(debugLines[mode], msg)
    if #debugLines[mode] > maxLogs then
        table.remove(debugLines[mode], 1)
        if _G["DebugScroll_"..mode] and _G["DebugScroll_"..mode]:FindFirstChildOfClass("TextLabel") then
            _G["DebugScroll_"..mode]:FindFirstChildOfClass("TextLabel"):Destroy()
        end
    end
    local line = Instance.new("TextLabel")
    line.Size = UDim2.new(1, 0, 0, 20)
    line.Text = msg
    line.TextColor3 = color or Color3.fromRGB(255, 255, 255)
    line.BackgroundTransparency = 1
    line.TextXAlignment = Enum.TextXAlignment.Left
    line.Parent = _G["DebugScroll_"..mode]
    _G["DebugScroll_"..mode].CanvasSize = UDim2.new(0, 0, 0, _G["UIList_"..mode].AbsoluteContentSize.Y)
    _G["DebugScroll_"..mode].CanvasPosition = Vector2.new(0, _G["DebugScroll_"..mode].CanvasSize.Y.Offset)
end

