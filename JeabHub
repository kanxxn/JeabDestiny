-- ======================
-- ‚öîÔ∏è Logic Mode
-- ======================
local running = false

local function stopMode()
    running = false
    print("üõë ‡∏´‡∏¢‡∏∏‡∏î‡πÇ‡∏´‡∏°‡∏î‡πÅ‡∏•‡πâ‡∏ß")
end

local function normalMode()
    stopMode()
    running = true
    print("‚ñ∂Ô∏è ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÇ‡∏´‡∏°‡∏î Scylla ‡∏õ‡∏Å‡∏ï‡∏¥")
    task.spawn(function()
        while running do
            local scylla = workspace:FindFirstChild("Scylla")
            if scylla then
                print("‡∏û‡∏ö Scylla ‚Üí ‡πÉ‡∏ä‡πâ Rod")
                if _G.UseRod then _G.UseRod("Default") end
            else
                if _G.UseTotem then _G.UseTotem("Sundial") end
            end
            task.wait(2)
        end
    end)
end

local function auroraMode()
    stopMode()
    running = true
    print("‚ñ∂Ô∏è ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÇ‡∏´‡∏°‡∏î Scylla (Aurora)")
    task.spawn(function()
        while running do
            local scylla = workspace:FindFirstChild("Scylla")
            if scylla then
                if cycle.Value == "Day" then
                    print("‚òÄÔ∏è Day ‚Üí ‡∏£‡∏≠ Night (‡πÉ‡∏ä‡πâ Sundial ‡∏ï‡πà‡∏≠)")
                    if _G.UseTotem then _G.UseTotem("Sundial") end
                elseif cycle.Value == "Night" then
                    print("üåô Night ‚Üí ‡∏£‡∏≠ 7 ‡∏ß‡∏¥ ‡πÅ‡∏•‡πâ‡∏ß‡πÉ‡∏ä‡πâ Aurora Totem")
                    task.wait(7)
                    if _G.UseTotem then _G.UseTotem("Aurora") end
                    print("üåå Aurora Totem ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß ‚Üí ‡∏£‡∏≠ 7 ‡∏ß‡∏¥ ‡∏Å‡πà‡∏≠‡∏ô‡∏™‡∏•‡∏±‡∏ö Rod")
                    task.wait(7)
                    if _G.UseRod then _G.UseRod("Default") end
                end
            else
                if _G.UseTotem then _G.UseTotem("Sundial") end
            end
            task.wait(2)
        end
    end)
end

-- ======================
-- üéõÔ∏è ‡∏õ‡∏∏‡πà‡∏° Function
-- ======================
scyllaBtn.MouseButton1Click:Connect(normalMode)
auroraBtn.MouseButton1Click:Connect(auroraMode)

-- ‡∏õ‡∏¥‡∏î / ‡∏¢‡πà‡∏≠ Hub
closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleBtn.Visible = true
end)

minimizeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleBtn.Visible = true
end)

toggleBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    toggleBtn.Visible = false
end)

print("‚úÖ Jeab Hub Loaded | Version : Beta")
