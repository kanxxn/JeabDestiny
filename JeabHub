-- Jeab Hub | V.1 (UI ‡πÄ‡∏ó‡∏™)
-- ‡∏ß‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå‡∏ô‡∏µ‡πâ‡πÉ‡∏ô StarterPlayer > StarterPlayerScripts ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô!!

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "JeabHubUI"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á TopBar
local topBar = Instance.new("Frame")
topBar.Size = UDim2.new(0, 400, 0, 40)
topBar.Position = UDim2.new(0.05, 0, 0.05, 0)
topBar.BackgroundColor3 = Color3.fromRGB(255, 220, 100)
topBar.BorderSizePixel = 0
topBar.Parent = screenGui

-- ‡∏ó‡∏≥‡πÉ‡∏´‡πâ‡∏•‡∏≤‡∏Å‡πÑ‡∏î‡πâ (PC + Touch)
local UserInputService = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos

local function update(input)
	if dragging then
		local delta = input.Position - dragStart
		topBar.Position = UDim2.new(
			startPos.X.Scale,
			startPos.X.Offset + delta.X,
			startPos.Y.Scale,
			startPos.Y.Offset + delta.Y
		)
	end
end

topBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = topBar.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

topBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if input == dragInput then
		update(input)
	end
end)

-- ‡∏ä‡∏∑‡πà‡∏≠ Hub
local hubLabel = Instance.new("TextLabel")
hubLabel.Size = UDim2.new(1, -40, 1, 0)
hubLabel.Position = UDim2.new(0, 10, 0, 0)
hubLabel.BackgroundTransparency = 1
hubLabel.Text = "Jeab Hub | V.1"
hubLabel.Font = Enum.Font.FredokaOne
hubLabel.TextSize = 20
hubLabel.TextColor3 = Color3.fromRGB(50, 50, 50)
hubLabel.TextXAlignment = Enum.TextXAlignment.Left
hubLabel.Parent = topBar

-- ‡∏õ‡∏∏‡πà‡∏°‡∏•‡∏π‡∏Å‡πÄ‡∏à‡∏µ‡πä‡∏¢‡∏ö üê•
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 40, 1, 0)
toggleButton.Position = UDim2.new(1, -40, 0, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
toggleButton.Text = "üê•"
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 22
toggleButton.Parent = topBar
