-- ======================================================
-- üü° LOGIC : Scylla + Aurora Mode
-- ======================================================
workspace.ChildAdded:Connect(function(child)
    if string.find(string.lower(child.Name), "scylla") then
        scyllaActive = true
        debugLog("scylla", "üëÄ ‡πÄ‡∏à‡∏≠ Scylla! ‚Üí ‡∏£‡∏≠ 15 ‡∏ß‡∏¥ ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏ß‡∏•‡∏≤", Color3.fromRGB(255,255,0))
        task.delay(15, function()
            if not isRunning.scylla then return end
            local RS = game:GetService("ReplicatedStorage")
            local timeStatus = RS:FindFirstChild("cycle_weatherstimeofday")
            if timeStatus then
                local val = tostring(timeStatus.Value)
                if val == "Day" then
                    debugLog("scylla", "‚òÄÔ∏è ‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏Å‡∏•‡∏≤‡∏á‡∏ß‡∏±‡∏ô", Color3.fromRGB(255,200,0))
                    useItem(sundialName)
                    debugLog("scylla", "üï∞ ‡πÉ‡∏ä‡πâ Sundial ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡∏Å‡∏•‡∏≤‡∏á‡∏Ñ‡∏∑‡∏ô", Color3.fromRGB(200,150,0))
                    task.wait(2)
                    useItem(auroraName)
                    debugLog("scylla", "üåå ‡πÉ‡∏ä‡πâ Aurora Totem", Color3.fromRGB(100,200,255))
                elseif val == "Night" then
                    debugLog("scylla", "üåô ‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏Å‡∏•‡∏≤‡∏á‡∏Ñ‡∏∑‡∏ô", Color3.fromRGB(150,150,255))
                    useItem(auroraName)
                    debugLog("scylla", "üåå ‡πÉ‡∏ä‡πâ Aurora Totem", Color3.fromRGB(100,200,255))
                end
                equipItem(rodKeyword)
                debugLog("scylla", "üé£ ‡∏ñ‡∏∑‡∏≠ Rod Of The Zenith", Color3.fromRGB(100,255,100))
            end
        end)
    end
end)

workspace.ChildRemoved:Connect(function(child)
    if string.find(string.lower(child.Name), "scylla") then
        scyllaActive = false
        debugLog("scylla", "‚ùå Scylla ‡∏´‡∏≤‡∏¢‡πÑ‡∏õ ‚Üí ‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡πÉ‡∏´‡∏°‡πà", Color3.fromRGB(255,0,0))
    end
end)

task.spawn(function()
    while true do
        if isRunning.scylla then
            if not scyllaActive then
                useItem(sundialName)
                debugLog("scylla", "üîÑ ‡πÑ‡∏°‡πà‡∏°‡∏µ Scylla ‚Üí ‡πÉ‡∏ä‡πâ Sundial", Color3.fromRGB(255,255,0))
                task.wait(5)
            end
        end
        task.wait(1)
    end
end)

-- ======================================================
-- üü° Toggle Hub
-- ======================================================
ChickBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)
