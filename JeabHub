-- ======================================================
-- üü° FUNCTION ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏°‡∏ß‡∏î + Debug Panel
-- ======================================================
local function createCategory(name, mode)
    local Zone = Instance.new("Frame")
    Zone.Parent = Scroll
    Zone.Size = UDim2.new(1, -10, 0, 120)
    Zone.BackgroundColor3 = Color3.fromRGB(255, 190, 90)
    Zone.BackgroundTransparency = 0.1
    Zone.BorderSizePixel = 0
    Instance.new("UICorner", Zone).CornerRadius = UDim.new(0, 10)

    local Label = Instance.new("TextLabel")
    Label.Parent = Zone
    Label.Size = UDim2.new(1, -10, 0, 25)
    Label.Position = UDim2.new(0, 5, 0, 5)
    Label.BackgroundTransparency = 1
    Label.Text = name
    Label.Font = Enum.Font.SourceSansBold
    Label.TextSize = 18
    Label.TextColor3 = Color3.fromRGB(50, 30, 0)
    Label.TextXAlignment = Enum.TextXAlignment.Left

    local ToggleBtn = Instance.new("TextButton")
    ToggleBtn.Parent = Zone
    ToggleBtn.Size = UDim2.new(0, 120, 0, 35)
    ToggleBtn.Position = UDim2.new(0, 10, 0, 40)
    ToggleBtn.Text = "‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
    ToggleBtn.BackgroundColor3 = Color3.fromRGB(220, 80, 40)
    ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleBtn.Font = Enum.Font.SourceSansBold
    ToggleBtn.TextSize = 16
    Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(0, 8)

    local DebugBtn = Instance.new("TextButton")
    DebugBtn.Parent = Zone
    DebugBtn.Size = UDim2.new(0, 80, 0, 25)
    DebugBtn.Position = UDim2.new(0, 150, 0, 45)
    DebugBtn.Text = "Debug"
    DebugBtn.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
    DebugBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Instance.new("UICorner", DebugBtn).CornerRadius = UDim.new(0, 8)

    -- Debug Panel
    local DebugFrame = Instance.new("Frame")
    DebugFrame.Parent = ScreenGui
    DebugFrame.Size = UDim2.new(0, 280, 0, 180)
    DebugFrame.Position = UDim2.new(0.7, 0, 0.25, 0)
    DebugFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    DebugFrame.Visible = false
    DebugFrame.Active = true
    DebugFrame.Draggable = true
    Instance.new("UICorner", DebugFrame).CornerRadius = UDim.new(0, 10)

    local DebugTitle = Instance.new("TextLabel")
    DebugTitle.Parent = DebugFrame
    DebugTitle.Size = UDim2.new(1, 0, 0, 30)
    DebugTitle.Text = "üîé Debug Log | "..name
    DebugTitle.BackgroundTransparency = 1
    DebugTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    DebugTitle.Font = Enum.Font.SourceSansBold
    DebugTitle.TextSize = 18

    local DebugScroll = Instance.new("ScrollingFrame")
    DebugScroll.Parent = DebugFrame
    DebugScroll.Size = UDim2.new(1, 0, 1, -30)
    DebugScroll.Position = UDim2.new(0, 0, 0, 30)
    DebugScroll.BackgroundTransparency = 1
    DebugScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
    _G["DebugScroll_"..mode] = DebugScroll

    local UIList = Instance.new("UIListLayout", DebugScroll)
    UIList.SortOrder = Enum.SortOrder.LayoutOrder
    _G["UIList_"..mode] = UIList

    -- Event Toggle
    ToggleBtn.MouseButton1Click:Connect(function()
        isRunning[mode] = not isRunning[mode]
        if isRunning[mode] then
            ToggleBtn.Text = "‡πÄ‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
            ToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
            debugLog(mode, "‚úÖ ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô "..name, Color3.fromRGB(0,255,0))
        else
            ToggleBtn.Text = "‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
            ToggleBtn.BackgroundColor3 = Color3.fromRGB(220, 80, 40)
            debugLog(mode, "üõë ‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô "..name, Color3.fromRGB(255,0,0))
        end
    end)

    DebugBtn.MouseButton1Click:Connect(function()
        debugVisible[mode] = not debugVisible[mode]
        DebugFrame.Visible = debugVisible[mode]
    end)

    return Zone
end

