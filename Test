-- üêü Auto Appraise GUI (With Mutation Selector)
-- Made by Jeab üê•

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local running = false
local selectedMutation = "Albino" -- ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
local hotbarSlot = Enum.KeyCode.Nine -- slot 9

-- Mutation ‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
local mutations = {
    "Albino","Negative","Goliath","Mini","Golden",
    "Shadow","Radioactive","Glitched","Infernal","Heavenly"
}

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏°‡πÉ‡∏ô Dialogue
local function clickDialogue(optionText)
    local playerGui = LocalPlayer:WaitForChild("PlayerGui")
    for _,desc in ipairs(playerGui:GetDescendants()) do
        if desc:IsA("TextButton") and string.find(desc.Text, optionText) then
            desc.Activated:Fire()
            return true
        end
    end
    return false
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏ä‡πá‡∏Ñ Mutation ‡πÑ‡∏î‡πâ‡πÅ‡∏•‡πâ‡∏ß
local function checkMutation(msg)
    if string.find(msg, "is now mutated with") then
        local found = msg:match("mutated with%s+(%w+)")
        if found then
            if found == selectedMutation then
                running = false
                StatusLabel.Text = "üéâ ‡πÑ‡∏î‡πâ Mutation: "..found.." ‡πÅ‡∏•‡πâ‡∏ß!"
                StartBtn.Text = "Start"
                StartBtn.BackgroundColor3 = Color3.fromRGB(80,180,60)
            else
                StatusLabel.Text = "‚ùå ‡πÑ‡∏î‡πâ "..found.." ‚Üí ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏ô‡∏ï‡πà‡∏≠..."
            end
        end
    end
end

-- Auto Loop
local function autoAppraise()
    while task.wait(2) do
        if running and selectedMutation then
            -- 1. ‡∏ñ‡∏∑‡∏≠‡∏õ‡∏•‡∏≤ (slot 9)
            game:GetService("VirtualInputManager"):SendKeyEvent(true, hotbarSlot, false, game)
            task.wait(0.5)

            -- 2. ‡∏Å‡∏î "Can you appraise this fish?"
            clickDialogue("Can you appraise this fish?")
            task.wait(0.5)

            -- 3. ‡∏Å‡∏î "Yes!"
            clickDialogue("Yes!")
        end
    end
end

-- GUI ==================
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0,250,0,180)
Frame.Position = UDim2.new(0.05,0,0.25,0)
Frame.BackgroundColor3 = Color3.fromRGB(180,220,255)
Frame.Active = true
Frame.Draggable = true
Frame.BorderSizePixel = 0
Instance.new("UICorner", Frame).CornerRadius = UDim.new(0,12)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1,0,0,30)
Title.BackgroundTransparency = 1
Title.Text = "üêü Auto Appraise"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(0,50,150)

-- Start / Stop Button
StartBtn = Instance.new("TextButton", Frame)
StartBtn.Size = UDim2.new(0,150,0,40)
StartBtn.Position = UDim2.new(0.5,-75,0.3,0)
StartBtn.Text = "Start"
StartBtn.BackgroundColor3 = Color3.fromRGB(80,180,60)
StartBtn.TextColor3 = Color3.fromRGB(255,255,255)
StartBtn.Font = Enum.Font.SourceSansBold
StartBtn.TextSize = 20
Instance.new("UICorner", StartBtn).CornerRadius = UDim.new(0,10)

-- ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Mutation
local SelectBtn = Instance.new("TextButton", Frame)
SelectBtn.Size = UDim2.new(0,120,0,30)
SelectBtn.Position = UDim2.new(0.5,-60,0.6,0)
SelectBtn.Text = "‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Mutation"
SelectBtn.BackgroundColor3 = Color3.fromRGB(100,140,255)
SelectBtn.TextColor3 = Color3.fromRGB(255,255,255)
SelectBtn.Font = Enum.Font.SourceSansBold
SelectBtn.TextSize = 16
Instance.new("UICorner", SelectBtn).CornerRadius = UDim.new(0,8)

-- Label ‡πÅ‡∏™‡∏î‡∏á Mutation ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
StatusLabel = Instance.new("TextLabel", Frame)
StatusLabel.Size = UDim2.new(1,0,0,30)
StatusLabel.Position = UDim2.new(0,0,0.85,0)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "üîé Mutation: "..selectedMutation
StatusLabel.TextColor3 = Color3.fromRGB(80,0,120)
StatusLabel.Font = Enum.Font.SourceSansBold
StatusLabel.TextSize = 16

-- ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏¥‡∏î
local ExitBtn = Instance.new("TextButton", Frame)
ExitBtn.Size = UDim2.new(0,28,0,28)
ExitBtn.Position = UDim2.new(1,-35,0,6)
ExitBtn.Text = "X"
ExitBtn.BackgroundColor3 = Color3.fromRGB(200,60,60)
ExitBtn.TextColor3 = Color3.fromRGB(255,255,255)
ExitBtn.Font = Enum.Font.SourceSansBold
ExitBtn.TextSize = 16
Instance.new("UICorner", ExitBtn).CornerRadius = UDim.new(1,0)

-- Events ==================

-- ‡∏õ‡∏¥‡∏î GUI
ExitBtn.MouseButton1Click:Connect(function()
    running = false
    ScreenGui:Destroy()
end)

-- Toggle Start
StartBtn.MouseButton1Click:Connect(function()
    running = not running
    if running then
        StartBtn.Text = "Stop"
        StartBtn.BackgroundColor3 = Color3.fromRGB(220,80,40)
        StatusLabel.Text = "üîÑ ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ó‡∏≥‡∏á‡∏≤‡∏ô... ‡∏£‡∏≠ Mutation: "..selectedMutation
    else
        StartBtn.Text = "Start"
        StartBtn.BackgroundColor3 = Color3.fromRGB(80,180,60)
        StatusLabel.Text = "‚è∏ ‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
    end
end)

-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Mutation
SelectBtn.MouseButton1Click:Connect(function()
    -- Popup ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Mutation
    local popup = Instance.new("Frame", ScreenGui)
    popup.Size = UDim2.new(0,200,0,200)
    popup.Position = UDim2.new(0.5,-100,0.5,-100)
    popup.BackgroundColor3 = Color3.fromRGB(240,240,240)
    Instance.new("UICorner", popup).CornerRadius = UDim.new(0,12)

    local UIGrid = Instance.new("UIGridLayout", popup)
    UIGrid.CellSize = UDim2.new(0,90,0,30)
    UIGrid.FillDirectionMaxCells = 2
    UIGrid.SortOrder = Enum.SortOrder.LayoutOrder

    for _,mut in ipairs(mutations) do
        local btn = Instance.new("TextButton", popup)
        btn.Text = mut
        btn.BackgroundColor3 = Color3.fromRGB(120,160,255)
        btn.TextColor3 = Color3.new(1,1,1)
        btn.Font = Enum.Font.SourceSansBold
        btn.TextSize = 14
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0,6)

        btn.MouseButton1Click:Connect(function()
            selectedMutation = mut
            StatusLabel.Text = "üîé Mutation: "..selectedMutation
            popup:Destroy()
        end)
    end
end)

-- ‡∏ü‡∏±‡∏á ChatLog ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏´‡∏≤‡∏ß‡πà‡∏≤‡πÑ‡∏î‡πâ Mutation ‡∏´‡∏£‡∏∑‡∏≠‡∏¢‡∏±‡∏á
LocalPlayer.Chatted:Connect(function(msg)
    checkMutation(msg)
end)

-- ‡∏£‡∏±‡∏ô Loop ‡∏´‡∏•‡∏±‡∏Å
task.spawn(autoAppraise)
