local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Detect ‡πÄ‡∏ß‡∏•‡∏≤ UI ‡πÇ‡∏ú‡∏•‡πà
PlayerGui.ChildAdded:Connect(function(child)
    -- ‡∏ñ‡πâ‡∏≤‡∏ä‡∏∑‡πà‡∏≠ UI ‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ß‡πà‡∏≤ "Dialogue" ‡∏´‡∏£‡∏∑‡∏≠ "Chat" ‡πÉ‡∏´‡πâ‡∏•‡∏≠‡∏á‡πÄ‡∏ä‡πá‡∏Å
    if string.find(string.lower(child.Name), "dialogue") or string.find(string.lower(child.Name), "chat") then
        warn("‚úÖ ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏Ñ‡∏∏‡∏¢‡∏Å‡∏±‡∏ö NPC ‡πÅ‡∏•‡πâ‡∏ß ‚Üí ‡∏û‡∏¢‡∏≤‡∏¢‡∏≤‡∏°‡∏Å‡∏î Option 1")
        
        task.wait(0.5) -- ‡∏£‡∏≠ UI ‡πÇ‡∏´‡∏•‡∏î‡∏Ñ‡∏£‡∏ö

        -- ‡∏´‡∏≤‡∏õ‡∏∏‡πà‡∏°‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
        for _, obj in pairs(child:GetDescendants()) do
            if obj:IsA("TextButton") and string.find(obj.Text, "appraise") then
                task.wait(0.2)
                obj:Activate() -- ‡∏´‡∏£‡∏∑‡∏≠ obj.MouseButton1Click:Fire() 
                warn("üéØ ‡∏Å‡∏î‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: Can you appraise this fish?")
            end
        end
    end
end)

-- Detect ‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏•‡∏¥‡∏Å‡∏Ñ‡∏∏‡∏¢
PlayerGui.ChildRemoved:Connect(function(child)
    if string.find(string.lower(child.Name), "dialogue") or string.find(string.lower(child.Name), "chat") then
        warn("‚ùå ‡∏à‡∏ö‡∏ö‡∏ó‡∏™‡∏ô‡∏ó‡∏ô‡∏≤‡πÅ‡∏•‡πâ‡∏ß")
    end
end)
