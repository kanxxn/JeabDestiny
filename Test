--// Auto Appraise Script
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

-- Variables
local running = false
local selectedMutation = "Albino"

--// UI Creation
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AutoAppraiseGui"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 280, 0, 200)
Frame.Position = UDim2.new(0.5, -140, 0.5, -100)
Frame.BackgroundColor3 = Color3.fromRGB(173, 216, 230)
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.Text = "üêü Auto Appraise"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.Parent = Frame

local CloseBtn = Instance.new("TextButton")
CloseBtn.Size = UDim2.new(0, 30, 0, 30)
CloseBtn.Position = UDim2.new(1, -30, 0, 0)
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
CloseBtn.Parent = Frame
CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local StartBtn = Instance.new("TextButton")
StartBtn.Size = UDim2.new(0.8, 0, 0, 50)
StartBtn.Position = UDim2.new(0.1, 0, 0.2, 0)
StartBtn.Text = "Start"
StartBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
StartBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
StartBtn.Font = Enum.Font.SourceSansBold
StartBtn.TextSize = 22
StartBtn.Parent = Frame

local MutationBtn = Instance.new("TextButton")
MutationBtn.Size = UDim2.new(0.8, 0, 0, 40)
MutationBtn.Position = UDim2.new(0.1, 0, 0.55, 0)
MutationBtn.Text = "üéØ Mutation: " .. selectedMutation
MutationBtn.BackgroundColor3 = Color3.fromRGB(100, 140, 220)
MutationBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MutationBtn.Font = Enum.Font.SourceSans
MutationBtn.TextSize = 18
MutationBtn.Parent = Frame

local StatusLabel = Instance.new("TextLabel")
StatusLabel.Size = UDim2.new(1, 0, 0, 30)
StatusLabel.Position = UDim2.new(0, 0, 0.8, 0)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "‚è≥ ‡∏£‡∏≠‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô..."
StatusLabel.Font = Enum.Font.SourceSans
StatusLabel.TextSize = 18
StatusLabel.Parent = Frame

local Credit = Instance.new("TextLabel")
Credit.Size = UDim2.new(1, 0, 0, 20)
Credit.Position = UDim2.new(0, 0, 1, -20)
Credit.BackgroundTransparency = 1
Credit.Text = "Made By Jeab"
Credit.Font = Enum.Font.SourceSansItalic
Credit.TextSize = 14
Credit.TextColor3 = Color3.fromRGB(50, 50, 50)
Credit.Parent = Frame

-- Mutation list
local mutations = {"Albino","Negative","Glowing","Golden","Shadow","Radiant","Crystal"}
local mutationIndex = 1

MutationBtn.MouseButton1Click:Connect(function()
    mutationIndex = mutationIndex + 1
    if mutationIndex > #mutations then
        mutationIndex = 1
    end
    selectedMutation = mutations[mutationIndex]
    MutationBtn.Text = "üéØ Mutation: " .. selectedMutation
end)

-- Function to simulate appraisal loop
local function startAppraise()
    running = true
    StartBtn.Text = "Stop"
    StartBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    StatusLabel.Text = "‚ñ∂ ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô..."

    while running do
        -- ‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Ç‡∏±‡πâ‡∏ô‡∏ï‡∏≠‡∏ô
        -- 1. ‡∏ñ‡∏∑‡∏≠‡∏õ‡∏•‡∏≤ slot 9
        -- 2. ‡∏Ñ‡∏•‡∏¥‡∏Å "Can you appraise this fish?"
        -- 3. ‡∏Ñ‡∏•‡∏¥‡∏Å "Yes!"
        -- (‡πÄ‡∏û‡∏¥‡πà‡∏° Remote Event ‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ‡πÄ‡∏≠‡∏á‡∏ó‡∏µ‡∏´‡∏•‡∏±‡∏á)
        wait(2) -- ‡∏î‡∏µ‡πÄ‡∏•‡∏¢‡πå‡∏à‡∏≥‡∏•‡∏≠‡∏á
    end
end

StartBtn.MouseButton1Click:Connect(function()
    if running then
        running = false
        StartBtn.Text = "Start"
        StartBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
        StatusLabel.Text = "‚è∏ ‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
    else
        startAppraise()
    end
end)

-- Detect Mutation UI messages
local function monitorUI()
    local playerGui = LocalPlayer:WaitForChild("PlayerGui")
    playerGui.DescendantAdded:Connect(function(desc)
        if desc:IsA("TextLabel") and desc.Text ~= "" then
            local text = desc.Text
            if string.find(text, "is now mutated with") then
                local found = text:match("mutated with%s+(%w+)")
                if found then
                    if found == selectedMutation then
                        running = false
                        StatusLabel.Text = "üéâ ‡πÑ‡∏î‡πâ Mutation: "..found.." ‡πÅ‡∏•‡πâ‡∏ß!"
                        StartBtn.Text = "Start"
                        StartBtn.BackgroundColor3 = Color3.fromRGB(80,180,60)
                    else
                        StatusLabel.Text = "‚ùå ‡πÑ‡∏î‡πâ "..found.." ‚Üí ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏ô‡∏ï‡πà‡∏≠..."
                    end
                end
            end
        end
    end)
end

monitorUI()
