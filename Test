-- üêü Auto Appraise GUI + Mutation Picker
-- Made By Jeab üêü

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local isRunning = false
local wantedMutation = "Albino" -- ‡∏Ñ‡πà‡∏≤ default
local hotbarSlot = 9

-- ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠ Mutation (‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á, ‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÑ‡∏î‡πâ‡πÄ‡∏≠‡∏á)
local mutationList = {
    "Albino","Negative","Positive","Twilight",
    "Radiant","Glowing","Phantom","Storm",
    "Giant","Mini","Ancient","Toxic"
}

-- ================= GUI ‡∏´‡∏•‡∏±‡∏Å =================
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 260, 0, 180)
Frame.Position = UDim2.new(0.05, 0, 0.25, 0)
Frame.BackgroundColor3 = Color3.fromRGB(180, 220, 255)
Frame.Active = true
Frame.Draggable = true
Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 12)

local Title = Instance.new("TextLabel")
Title.Parent = Frame
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.Text = "üêü Auto Appraise"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(0, 50, 150)

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Parent = Frame
ToggleBtn.Size = UDim2.new(0, 180, 0, 40)
ToggleBtn.Position = UDim2.new(0.5, -90, 0.35, 0)
ToggleBtn.Text = "Start"
ToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.Font = Enum.Font.SourceSansBold
ToggleBtn.TextSize = 18
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(0, 10)

local MutationBtn = Instance.new("TextButton")
MutationBtn.Parent = Frame
MutationBtn.Size = UDim2.new(0, 120, 0, 30)
MutationBtn.Position = UDim2.new(0.05, 0, 0.65, 0)
MutationBtn.Text = "‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Mutation"
MutationBtn.BackgroundColor3 = Color3.fromRGB(100, 140, 220)
MutationBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MutationBtn.Font = Enum.Font.SourceSansBold
MutationBtn.TextSize = 16
Instance.new("UICorner", MutationBtn).CornerRadius = UDim.new(0, 8)

local HotbarLabel = Instance.new("TextLabel")
HotbarLabel.Parent = Frame
HotbarLabel.Size = UDim2.new(0, 50, 0, 25)
HotbarLabel.Position = UDim2.new(0.65, 0, 0.65, 0)
HotbarLabel.BackgroundTransparency = 1
HotbarLabel.Text = tostring(hotbarSlot)
HotbarLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
HotbarLabel.Font = Enum.Font.SourceSansBold
HotbarLabel.TextSize = 18

local MutationLabel = Instance.new("TextLabel")
MutationLabel.Parent = Frame
MutationLabel.Size = UDim2.new(1, -10, 0, 25)
MutationLabel.Position = UDim2.new(0, 5, 0.85, 0)
MutationLabel.BackgroundTransparency = 1
MutationLabel.Text = "üéØ Mutation: " .. wantedMutation
MutationLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
MutationLabel.Font = Enum.Font.SourceSans
MutationLabel.TextSize = 16

-- ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏¥‡∏î
local ExitBtn = Instance.new("TextButton")
ExitBtn.Parent = Frame
ExitBtn.Size = UDim2.new(0, 28, 0, 28)
ExitBtn.Position = UDim2.new(1, -35, 0, 6)
ExitBtn.Text = "X"
ExitBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
ExitBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ExitBtn.Font = Enum.Font.SourceSansBold
ExitBtn.TextSize = 16
Instance.new("UICorner", ExitBtn).CornerRadius = UDim.new(1, 0)

-- ================= GUI Mutation Picker =================
local PickerFrame = Instance.new("Frame")
PickerFrame.Parent = ScreenGui
PickerFrame.Size = UDim2.new(0, 300, 0, 300)
PickerFrame.Position = UDim2.new(0.4, 0, 0.25, 0)
PickerFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
PickerFrame.Visible = false
Instance.new("UICorner", PickerFrame).CornerRadius = UDim.new(0, 12)

local PickerScroll = Instance.new("ScrollingFrame")
PickerScroll.Parent = PickerFrame
PickerScroll.Size = UDim2.new(1, -10, 1, -10)
PickerScroll.Position = UDim2.new(0, 5, 0, 5)
PickerScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
PickerScroll.ScrollBarThickness = 8

local UIGrid = Instance.new("UIGridLayout")
UIGrid.CellSize = UDim2.new(0, 90, 0, 30)
UIGrid.CellPadding = UDim2.new(0, 5, 0, 5)
UIGrid.Parent = PickerScroll

for _, m in ipairs(mutationList) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 90, 0, 30)
    btn.Text = m
    btn.BackgroundColor3 = Color3.fromRGB(200, 200, 250)
    btn.TextColor3 = Color3.fromRGB(0, 0, 0)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 14
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    btn.Parent = PickerScroll

    btn.MouseButton1Click:Connect(function()
        wantedMutation = m
        MutationLabel.Text = "üéØ Mutation: " .. wantedMutation
        PickerFrame.Visible = false
    end)
end

-- ================= Function =================
local function equipHotbar(slot)
    game:GetService("VirtualInputManager"):SendKeyEvent(true, tostring(slot), false, game)
    task.wait(0.2)
    game:GetService("VirtualInputManager"):SendKeyEvent(false, tostring(slot), false, game)
end

local function clickButtonWithText(txt)
    for _, gui in pairs(LocalPlayer.PlayerGui:GetDescendants()) do
        if gui:IsA("TextButton") and gui.Text == txt then
            task.wait(0.1)
            gui.Activated:Fire()
            gui.MouseButton1Click:Fire()
            return true
        end
    end
    return false
end

-- ================= Mutation Detect =================
LocalPlayer.PlayerGui.DescendantAdded:Connect(function(desc)
    if desc:IsA("TextLabel") and desc.Text:find("is now mutated with") then
        local mutation = string.match(desc.Text, "mutated with%s+(%w+)")
        if mutation then
            if mutation == wantedMutation then
                isRunning = false
                ToggleBtn.Text = "Start"
                ToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
                print("‚úÖ ‡πÑ‡∏î‡πâ Mutation ‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£:", mutation)
            end
        end
    end
end)

-- ================= Loop =================
task.spawn(function()
    while true do
        if isRunning then
            equipHotbar(hotbarSlot)

            if clickButtonWithText("Can you appraise this fish?") then
                task.wait(0.5)
                clickButtonWithText("Yes!")
            end

            task.wait(1.5)
        end
        task.wait(0.1)
    end
end)

-- ================= Buttons =================
ToggleBtn.MouseButton1Click:Connect(function()
    isRunning = not isRunning
    if isRunning then
        ToggleBtn.Text = "Stop"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(220, 80, 40)
    else
        ToggleBtn.Text = "Start"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 60)
    end
end)

MutationBtn.MouseButton1Click:Connect(function()
    PickerFrame.Visible = true
end)

ExitBtn.MouseButton1Click:Connect(function()
    isRunning = false
    ScreenGui:Destroy()
end)
