_b.TextColor3 = Color3.fromRGB(0, 0, 0) -- ตัวหนังสือสีดำ
_b.TextSize = 12

-- Status
ab.Parent = da
ab.BackgroundColor3 = Color3.fromRGB(255, 255, 200) -- พื้นหลังเหลืองพาสเทล
ab.Position = UDim2.new(0, 0, 0.15, 0)
ab.Size = UDim2.new(0, 160, 0, 20)
ab.Font = Enum.Font.ArialBold
