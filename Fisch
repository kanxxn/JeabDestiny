local logBox = Instance.new("TextBox", debugFrame)
logBox.Size = UDim2.new(1, -20, 1, -50)
logBox.Position = UDim2.new(0, 10, 0, 40)
logBox.MultiLine = true
logBox.TextWrapped = false
logBox.TextXAlignment = Enum.TextXAlignment.Left
logBox.TextYAlignment = Enum.TextYAlignment.Top
logBox.ClearTextOnFocus = false
logBox.Font = Enum.Font.Code
logBox.TextSize = 14
logBox.TextColor3 = Color3.new(1, 1, 1)
logBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
logBox.Text = ""

--== Functions ==--
local running = false

local function log(msg)
    logBox.Text = msg .. "\n" .. logBox.Text
end

local function equipRod()
    local rod = backpack:FindFirstChildWhichIsA("Tool")
    if rod then
        player.Character.Humanoid:EquipTool(rod)
        log("‡∏û‡∏ö Scylla ‚Üí ‡∏ñ‡∏∑‡∏≠ Rod (Slot1)")
    else
        log("‚ùå ‡πÑ‡∏°‡πà‡∏°‡∏µ Rod ‡πÉ‡∏ô Backpack")
    end
end

-- Workspace listener
workspace.ChildAdded:Connect(function(child)
    log("[+] " .. child.Name)
    if string.find(string.lower(child.Name), "scylla") and running then
        equipRod()
    end
end)

workspace.ChildRemoved:Connect(function(child)
    log("[-] " .. child.Name)
end)

--== Buttons ==--
closeBtn.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

minimizeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

startBtn.MouseButton1Click:Connect(function()
    running = not running
    if running then
        startBtn.Text = "‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
        startBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        log("‚ñ∂ ‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Scylla Hunt")
    else
        startBtn.Text = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
        startBtn.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
        log("‚è∏ ‡∏´‡∏¢‡∏∏‡∏î Auto Scylla Hunt")
    end
end)

debugBtn.MouseButton1Click:Connect(function()
    debugFrame.Visible = not debugFrame.Visible
end)

copyBtn.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(logBox.Text)
        log("‚úÖ Debug log copied!")
    end
end)
