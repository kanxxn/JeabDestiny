--// Auto Scylla Hunt with GUI üê• by Jeab

-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Debug log storage
local debugLogs = {}

-- Function to add debug log
local function addDebug(msg)
    table.insert(debugLogs, msg)
    if #debugLogs > 50 then
        table.remove(debugLogs, 1)
    end
    debugFrame.Visible = debugVisible
    logLabel.Text = table.concat(debugLogs, "\n")
end

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 250, 0, 180)
mainFrame.Position = UDim2.new(0, 100, 0, 100)
mainFrame.BackgroundColor3 = Color3.fromRGB(255, 200, 100)
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame)

-- Title
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, -80, 0, 35)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.Text = "üê• Auto Scylla Hunt üê•"
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(50, 30, 0)
title.TextXAlignment = Enum.TextXAlignment.Left

-- Minimize Button
local minimizeBtn = Instance.new("TextButton", mainFrame)
minimizeBtn.Size = UDim2.new(0, 30, 0, 30)
minimizeBtn.Position = UDim2.new(1, -65, 0, 3)
minimizeBtn.BackgroundColor3 = Color3.fromRGB(150, 255, 150)
minimizeBtn.Text = "-"
minimizeBtn.TextSize = 20
minimizeBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
minimizeBtn.Font = Enum.Font.SourceSansBold
Instance.new("UICorner", minimizeBtn)

-- Close Button
local closeBtn = Instance.new("TextButton", mainFrame)
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -32, 0, 3)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 150, 150)
closeBtn.Text = "x"
closeBtn.TextSize = 20
closeBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
closeBtn.Font = Enum.Font.SourceSansBold
Instance.new("UICorner", closeBtn)

-- Toggle Button
local toggleBtn = Instance.new("TextButton", mainFrame)
toggleBtn.Size = UDim2.new(0, 200, 0, 50)
toggleBtn.Position = UDim2.new(0.5, -100, 0, 50)
toggleBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
toggleBtn.Text = "‡πÄ‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
toggleBtn.TextSize = 22
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", toggleBtn)

-- Debug Button
local debugBtn = Instance.new("TextButton", mainFrame)
debugBtn.Size = UDim2.new(0, 80, 0, 30)
debugBtn.Position = UDim2.new(0, 10, 0, 110)
debugBtn.BackgroundColor3 = Color3.fromRGB(120, 120, 255)
debugBtn.Text = "Debug"
debugBtn.TextSize = 18
debugBtn.Font = Enum.Font.SourceSans
debugBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", debugBtn)

-- Credit Label
local credit = Instance.new("TextLabel", mainFrame)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.BackgroundTransparency = 1
credit.Font = Enum.Font.SourceSansItalic
credit.Text = "Made By Jeab üê•"
credit.TextSize = 16
credit.TextColor3 = Color3.fromRGB(80, 50, 20)

-- Debug Frame
debugFrame = Instance.new("Frame", screenGui)
debugFrame.Size = UDim2.new(0, 300, 0, 200)
debugFrame.Position = UDim2.new(0, 400, 0, 100)
debugFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
debugFrame.Visible = false
Instance.new("UICorner", debugFrame)

-- Debug Title
local debugTitle = Instance.new("TextLabel", debugFrame)
debugTitle.Size = UDim2.new(1, -60, 0, 30)
debugTitle.Position = UDim2.new(0, 10, 0, 0)
debugTitle.BackgroundTransparency = 1
debugTitle.Font = Enum.Font.SourceSansBold
debugTitle.Text = "üîé Debug Log"
debugTitle.TextSize = 18
debugTitle.TextColor3 = Color3.new(1, 1, 1)
debugTitle.TextXAlignment = Enum.TextXAlignment.Left

-- Copy Button
local copyBtn = Instance.new("TextButton", debugFrame)
copyBtn.Size = UDim2.new(0, 50, 0, 25)
copyBtn.Position = UDim2.new(1, -60, 0, 3)
copyBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
copyBtn.Text = "Copy"
copyBtn.TextSize = 16
copyBtn.Font = Enum.Font.SourceSansBold
copyBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", copyBtn)

-- Debug Logs
logLabel = Instance.new("TextLabel", debugFrame)
logLabel.Size = UDim2.new(1, -20, 1, -40)
logLabel.Position = UDim2.new(0, 10, 0, 35)
logLabel.BackgroundTransparency = 1
logLabel.Font = Enum.Font.Code
logLabel.TextSize = 14
logLabel.TextColor3 = Color3.new(1, 1, 1)
logLabel.TextXAlignment = Enum.TextXAlignment.Left
logLabel.TextYAlignment = Enum.TextYAlignment.Top
logLabel.TextWrapped = true
logLabel.Text = ""

-- Variables
local running = false
local debugVisible = false
local minimized = false

-- Button Functions
toggleBtn.MouseButton1Click:Connect(function()
    running = not running
    toggleBtn.Text = running and "‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô" or "‡πÄ‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
    toggleBtn.BackgroundColor3 = running and Color3.fromRGB(255, 100, 100) or Color3.fromRGB(100, 255, 100)
    addDebug(running and "‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Scylla Hunt" or "‡∏´‡∏¢‡∏∏‡∏î Auto Scylla Hunt")
end)

debugBtn.MouseButton1Click:Connect(function()
    debugVisible = not debugVisible
    debugFrame.Visible = debugVisible
end)

copyBtn.MouseButton1Click:Connect(function()
    setclipboard(table.concat(debugLogs, "\n"))
    addDebug("‚úÖ Debug log copied!")
end)

closeBtn.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        mainFrame.Size = UDim2.new(0, 50, 0, 50)
        for _, v in ipairs(mainFrame:GetChildren()) do
            if v ~= minimizeBtn then v.Visible = false end
        end
        minimizeBtn.Text = "üê•"
    else
        mainFrame.Size = UDim2.new(0, 250, 0, 180)
        for _, v in ipairs(mainFrame:GetChildren()) do
            v.Visible = true
        end
        minimizeBtn.Text = "-"
    end
end)

-- Auto Hunt loop
RunService.Heartbeat:Connect(function()
    if running then
        local backpack = LocalPlayer.Backpack
        local rod = nil
        for _, tool in ipairs(backpack:GetChildren()) do
            if tool:IsA("Tool") and string.match(tool.Name, "Rod Of The Zenith") then
                rod = tool
                break
            end
        end
        if rod and LocalPlayer.Character and not LocalPlayer.Character:FindFirstChild("Rod Of The Zenith") then
            rod.Parent = LocalPlayer.Character
            addDebug("‡∏û‡∏ö Scylla ‚Üí ‡∏ñ‡∏∑‡∏≠ Rod")
        end
    end
end)
