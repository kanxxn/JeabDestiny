-- üê• Auto Scylla Hunt (Detect ‡∏à‡∏≤‡∏Å Model + Debug)
-- Made By Jeab üê•

local sundialName = "Sundial Totem"
local rodName = "Blessed Rod Of The Zenith"

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local isRunning = true -- ‡πÄ‡∏õ‡∏¥‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏Å‡∏î‡∏õ‡∏¥‡∏î‡πÄ‡∏≠‡∏á‡∏Å‡πá‡πÑ‡∏î‡πâ)
local scyllaActive = false

print("===== DEBUG SCYLLA SPAWN TRACKER START =====")

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÉ‡∏ä‡πâ‡πÑ‡∏≠‡πÄ‡∏ó‡πá‡∏°
local function useItem(itemName)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and tool.Name == itemName then
        tool:Activate()
        return true
    end

    local backpack = LocalPlayer.Backpack
    local toolInBackpack = backpack:FindFirstChild(itemName)
    if toolInBackpack then
        humanoid:EquipTool(toolInBackpack)
        task.wait()
        toolInBackpack:Activate()
        return true
    end
    return false
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏•‡∏±‡∏ö‡∏ñ‡∏∑‡∏≠
local function equipItem(itemName)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local tool = char:FindFirstChildOfClass("Tool")

    if tool and tool.Name == itemName then
        return true
    end

    local backpack = LocalPlayer.Backpack
    local toolInBackpack = backpack:FindFirstChild(itemName)
    if toolInBackpack then
        humanoid:EquipTool(toolInBackpack)
        return true
    end
    return false
end

-- ‚úÖ Debug + Detect Scylla
workspace.ChildAdded:Connect(function(child)
    print("[DEBUG] ChildAdded:", child.Name, child.ClassName)

    -- ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ß‡πà‡∏≤ "Scylla" ‡πÉ‡∏ô‡∏ä‡∏∑‡πà‡∏≠ = ‡∏ñ‡∏∑‡∏≠ Rod
    if string.find(string.lower(child.Name), "scylla") then
        scyllaActive = true
        print("[DEBUG] ‡∏û‡∏ö Scylla ‚Üí ‡∏ñ‡∏∑‡∏≠ Rod")
        equipItem(rodName)
    end
end)

workspace.ChildRemoved:Connect(function(child)
    print("[DEBUG] ChildRemoved:", child.Name, child.ClassName)

    if string.find(string.lower(child.Name), "scylla") then
        scyllaActive = false
        print("[DEBUG] Scylla ‡∏´‡∏≤‡∏¢‡πÑ‡∏õ‡πÅ‡∏•‡πâ‡∏ß ‚Üí ‡πÉ‡∏ä‡πâ Sundial")
        useItem(sundialName)
    end
end)

-- ‡∏•‡∏π‡∏õ‡∏´‡∏•‡∏±‡∏Å
task.spawn(function()
    while isRunning do
        if not scyllaActive then
            useItem(sundialName)
        else
            equipItem(rodName)
            repeat task.wait() until not isRunning or not scyllaActive
        end
        task.wait()
    end
end)
