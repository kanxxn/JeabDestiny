--// Auto Scylla Hunt Script (Delta Mobile)
--// Made By Jeab

local sundialName = "Sundial Totem"
local rodName = "Blessed Rod Of The Zenith"

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local isRunning = false
local scyllaActive = false

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÉ‡∏ä‡πâ‡πÑ‡∏≠‡πÄ‡∏ó‡πá‡∏° (‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö Equip + ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô)
local function useItem(itemName)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local backpack = LocalPlayer.Backpack

    -- ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡πÉ‡∏ô Backpack
    local toolInBackpack = backpack:FindFirstChild(itemName)
    if toolInBackpack then
        humanoid:EquipTool(toolInBackpack)
        task.wait(0.2)
        toolInBackpack:Activate()
        return true
    end

    -- ‡∏ñ‡πâ‡∏≤‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏°‡∏∑‡∏≠‡πÅ‡∏•‡πâ‡∏ß
    local tool = char:FindFirstChildOfClass("Tool")
    if tool and tool.Name == itemName then
        tool:Activate()
        return true
    end
    return false
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ñ‡∏∑‡∏≠‡πÄ‡∏â‡∏¢ ‡πÜ (‡πÑ‡∏°‡πà‡∏Å‡∏î)
local function equipItem(itemName)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local backpack = LocalPlayer.Backpack

    local toolInBackpack = backpack:FindFirstChild(itemName)
    if toolInBackpack then
        humanoid:EquipTool(toolInBackpack)
        return true
    end

    local tool = char:FindFirstChildOfClass("Tool")
    if tool and tool.Name == itemName then
        return true
    end

    return false
end

-- ‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏ô‡πÅ‡∏ä‡∏ó
LocalPlayer.Chatted:Connect(function(msg)
    if string.find(msg, "Scylla Hunt has begun!") then
        scyllaActive = true
    elseif string.find(msg, "The Scylla got away") then
        scyllaActive = false
    elseif string.find(msg, "has caught the Scylla!") then
        scyllaActive = false
    end
end)

-- ‡∏•‡∏π‡∏õ‡∏´‡∏•‡∏±‡∏Å
local function mainLoop()
    while isRunning do
        if not scyllaActive then
            -- ‡πÉ‡∏ä‡πâ Sundial ‡πÑ‡∏õ‡πÄ‡∏£‡∏∑‡πà‡∏≠‡∏¢ ‡πÜ
            useItem(sundialName)
        else
            -- Scylla ‡∏°‡∏≤‡πÅ‡∏•‡πâ‡∏ß ‚Üí ‡∏ñ‡∏∑‡∏≠ Rod ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß
            equipItem(rodName)

            -- ‡∏£‡∏≠‡∏à‡∏ô Event ‡∏à‡∏ö
            repeat task.wait() until not isRunning or not scyllaActive
        end
        task.wait()
    end
end

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0,220,0,130)
Frame.Position = UDim2.new(0.05,0,0.2,0)
Frame.BackgroundColor3 = Color3.fromRGB(255, 220, 120)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.BackgroundTransparency = 0.05
Frame.AnchorPoint = Vector2.new(0,0)

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0,15)
UICorner.Parent = Frame

local Title = Instance.new("TextLabel")
Title.Parent = Frame
Title.Size = UDim2.new(1, -10, 0, 25)
Title.Position = UDim2.new(0,5,0,5)
Title.BackgroundTransparency = 1
Title.Text = "üê• Auto Scylla Hunt"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(200,140,0)
Title.TextStrokeTransparency = 0.5

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Parent = Frame
ToggleBtn.Size = UDim2.new(0,150,0,40)
ToggleBtn.Position = UDim2.new(0.5,-75,0.5,-20)
ToggleBtn.Text = "‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
ToggleBtn.BackgroundColor3 = Color3.fromRGB(220,120,0)
ToggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
ToggleBtn.Font = Enum.Font.SourceSansBold
ToggleBtn.TextSize = 18

local UICornerBtn = Instance.new("UICorner")
UICornerBtn.CornerRadius = UDim.new(0,12)
UICornerBtn.Parent = ToggleBtn

local ExitBtn = Instance.new("TextButton")
ExitBtn.Parent = Frame
ExitBtn.Size = UDim2.new(0,28,0,28)
ExitBtn.Position = UDim2.new(1,-35,0,5)
ExitBtn.Text = "X"
ExitBtn.BackgroundColor3 = Color3.fromRGB(255,100,80)
ExitBtn.TextColor3 = Color3.fromRGB(255,255,255)
ExitBtn.Font = Enum.Font.SourceSansBold
ExitBtn.TextSize = 16

local UICornerExit = Instance.new("UICorner")
UICornerExit.CornerRadius = UDim.new(0,10)
UICornerExit.Parent = ExitBtn

local MadeBy = Instance.new("TextLabel")
MadeBy.Parent = Frame
MadeBy.Size = UDim2.new(1,0,0,20)
MadeBy.Position = UDim2.new(0,0,1,-22)
MadeBy.BackgroundTransparency = 1
MadeBy.Text = "Made By Jeab"
MadeBy.TextColor3 = Color3.fromRGB(180,120,0)
MadeBy.Font = Enum.Font.SourceSansItalic
MadeBy.TextSize = 14

ToggleBtn.MouseButton1Click:Connect(function()
    isRunning = not isRunning
    if isRunning then
        ToggleBtn.Text = "‡πÄ‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(0,200,100)
        task.spawn(mainLoop)
    else
        ToggleBtn.Text = "‡∏õ‡∏¥‡∏î‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(220,120,0)
    end
end)

ExitBtn.MouseButton1Click:Connect(function()
    isRunning = false
    ScreenGui:Destroy()
end)
